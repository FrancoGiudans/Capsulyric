<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="歌词调试页面"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="24dp"/>

        <!-- Current Music Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前播放音乐"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_current_song"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歌曲: 无"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_current_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歌手: 无"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放时间: 00:00 / 00:00"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:fontFamily="monospace"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Fetch Lyrics Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取歌词"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="从以下API获取歌词:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_fetch_lyrics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选择API并获取歌词"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歌词结果:"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp"/>

                <!-- 逐字歌词预览区域 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="?attr/colorPrimary"
                    app:cardBackgroundColor="?attr/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="逐字歌词预览"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            android:layout_marginBottom="12dp"/>

                        <!-- 上一行歌词 -->
                        <TextView
                            android:id="@+id/tv_prev_lyric_line"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:alpha="0.6"
                            android:gravity="center"
                            android:minHeight="30dp"/>

                        <!-- 当前歌词行（带逐字高亮） -->
                        <TextView
                            android:id="@+id/tv_current_lyric_line"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="等待获取歌词..."
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="center"
                            android:minHeight="50dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                        <!-- 下一行歌词 -->
                        <TextView
                            android:id="@+id/tv_next_lyric_line"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:alpha="0.6"
                            android:gravity="center"
                            android:minHeight="30dp"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="完整歌词:"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_lyrics_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:text="等待获取歌词..."
                    android:textColor="?attr/colorOnSurface"
                    android:background="?attr/colorSurface"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="top|start"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="返回"
            style="@style/Widget.Material3.Button.OutlinedButton"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
