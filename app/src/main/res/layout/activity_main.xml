<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false">

        <!-- Card 1: Status -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_status_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cancel"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/tv_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/status_inactive"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 2: App Info -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Version: ..."
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Card 3: Playback Info -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_playback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            style="@style/Widget.Material3.CardView.Elevated">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_playback_header"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="12dp"/>

                <!-- Song -->
                <TextView
                    android:id="@+id/tv_song"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_title_prefix"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginBottom="4dp"/>

                <!-- Artist -->
                <TextView
                    android:id="@+id/tv_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_artist_prefix"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginBottom="4dp"/>

                <!-- Lyric -->
                <TextView
                    android:id="@+id/tv_lyric"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_lyric_prefix"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:minLines="2"
                    android:layout_marginBottom="8dp"/>

                <!-- Copy Hint -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_copy_hint"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:textColor="?attr/colorOutline"
                    android:textSize="12sp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Menu List -->
        <!-- GitHub -->
        <TextView
            android:id="@+id/menu_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_github"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_github"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurface"
            app:drawableTint="?attr/colorOnSurface"/>

        <!-- Log -->
        <TextView
            android:id="@+id/menu_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_log"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_article"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurface"
            app:drawableTint="?attr/colorOnSurface"/>

        <!-- Settings -->
        <TextView
            android:id="@+id/menu_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_settings"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurface"
            app:drawableTint="?attr/colorOnSurface"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
